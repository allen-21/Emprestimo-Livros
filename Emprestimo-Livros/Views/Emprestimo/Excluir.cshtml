@model EmprestimosModel
@{
    ViewData["title"] = "Excluir Emprestimo";
}

<div class="container bg-dark p-5 rounded-5">

    <div class="mb-5  text-center">
        <h1 class="text-light">Exluir de Emprestimos</h1>
    </div>

    <form method="post" asp-controller="Emprestimo" asp-action="Excluir">

        <input type="hidden" asp-for="Id" />
        <h2 class="text-light">Tem Certeza de que deseja excluir o registro abaixo?</h2>

        <div class="mb-3">
            <label for="Recebedor" class="form-label text-light">Recebedor: </label>
            <input type="text" class="form-control" asp-for="Recebedor" id="Recebedor" placeholder="Quem esta Recebendo o livro?" disabled>
            <span class="text-danger" asp-validation-for="Recebedor"></span>


        </div>

        <div class="mb-3">
            <label for="Fornecedor" class="form-label text-light">Fornecebedor: </label>
            <input type="text" class="form-control" asp-for="Fornecedor" id="Fornecebedor" placeholder="Quem esta Emprestando o livro?" disabled>
            <span class="text-danger" asp-validation-for="Fornecedor"></span>


        </div>

        <div class="mb-3">
            <label for="Livro" class="form-label text-light">Livro: </label>
            <input type="text" class="form-control" asp-for="LivroEmprestado" id="Livro" placeholder="Qual è o Livro Emprestado? " disabled>
            <span class="text-danger" asp-validation-for="LivroEmprestado"></span>


        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Exluir</button>
            <a class="btn btn-primary w-50" asp-controller="Emprestimo" asp-action="Index" role="button">Voltar</a>
        </div>

    </form>

</div>
